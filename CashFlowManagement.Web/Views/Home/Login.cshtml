
@{
    Layout = null;
}


@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
    <link href="../Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="padding-top:20px">
    <div class="col-md-10 col-md-offset-1" id="mainWindow">
        <div class="well" id="loginForm">
            <table class="table table-bordered">
                <thead>
                    <tr class="success">
                        <td colspan="2">Existing User Login
                        <a class="btn btn-success pull-right" id="topRegisterBtn">Register</a>
                        </td>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            <input type="text" id="txtEmailLogin" placeholder="Email" />
                        </td>
                    </tr>
                    <tr>
                        <td>Password</td>
                        <td>
                            <input type="password" id="txtPasswordLogin" placeholder="Password" />
                        </td>
                    </tr>

                    <tr class="success">
                        <td colspan="2">
                            <input id="btnLogin" class="btn btn-success" type="button" value="Login" />
                        </td>
                    </tr>
                </tbody>
            </table>


            <!--Here is our alert  for error-->
            <div id="divError" class="alert alert-danger collapse">
                <a id="linkClose" class="close" href="#">&times;</a>
                <div id="divErrorText"></div>
            </div><!--here ends error alert-->
        </div>
        </div>


    <div class="container hidden" id="registerPage">
    </div>

    <div class="container hidden" id="managerHomePage">
    </div>

    <script src="../Scripts/jquery-1.10.2.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="../Scripts/App/HelperFunctions.js"></script>
    <script type="text/javascript" src="../Scripts/App/Login.js"></script>
</body>
</html>


